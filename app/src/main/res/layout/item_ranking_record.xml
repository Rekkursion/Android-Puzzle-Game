<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtv_rr_item_ranking_place"
        android:layout_marginEnd="@dimen/dim_general_margin"
        android:layout_marginBottom="@dimen/dim_ranking_record_item_margin"
        android:layout_marginTop="@dimen/dim_ranking_record_item_margin"
        android:gravity="center"
        android:text="1."
        android:textSize="@dimen/dim_ranking_record_item_text_size"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtv_rr_item_cost_time"
        android:layout_marginEnd="@dimen/dim_general_margin"
        android:layout_marginBottom="@dimen/dim_ranking_record_item_margin"
        android:layout_marginTop="@dimen/dim_ranking_record_item_margin"
        android:gravity="center"
        android:text="34.29"
        android:textSize="@dimen/dim_ranking_record_item_text_size"
        android:textAlignment="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtv_rr_item_moved_count"
        android:layout_marginEnd="@dimen/dim_general_margin"
        android:layout_marginBottom="@dimen/dim_ranking_record_item_margin"
        android:layout_marginTop="@dimen/dim_ranking_record_item_margin"
        android:gravity="center"
        android:text="102"
        android:textSize="@dimen/dim_ranking_record_item_text_size"
        android:textAlignment="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtv_rr_item_record_done_date"
        android:layout_marginBottom="@dimen/dim_ranking_record_item_margin"
        android:layout_marginTop="@dimen/dim_ranking_record_item_margin"
        android:gravity="center"
        android:text="2019/05/17"
        android:textSize="@dimen/dim_ranking_record_item_text_size"
        android:textAlignment="center"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lly_options_at_menu_activity_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/dim_general_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <!-- back to main -->
    <ImageView
        android:id="@+id/imgv_back_to_main_from_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arrow_back_orange_24dp"
        android:outlineSpotShadowColor="@android:color/black"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <!-- linear-layout for putting menu options -->
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtv_play_option_at_menu_activity"
            android:layout_marginBottom="@dimen/dim_general_margin"
            android:text="@string/str_play"
            android:textSize="@dimen/dim_general_ui_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtv_ranking_option_at_menu_activity"
            android:layout_marginBottom="@dimen/dim_general_margin"
            android:text="@string/str_ranking"
            android:textSize="@dimen/dim_general_ui_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtv_settings_option_at_menu_activity"
            android:text="@string/str_settings"
            android:textSize="@dimen/dim_general_ui_text_size"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>